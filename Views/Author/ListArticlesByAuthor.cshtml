@model List<PetaPocoWebTest.Poco.Article>

<fieldset>
    <legend>Articles by @ViewData["AuthorName"]</legend>
    @if( Model.Count > 0){
    <ul>
    @foreach( var article in Model) {
        <li>@Html.ActionLink( article.Title, "Details", "Article", new {articleId=article.Id}, null)</li>
    }
    </ul>
    } else {
    <p>None</p>
    }
</fieldset>
